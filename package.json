{
  "name": "aem-dialog-replacer",
  "displayName": "AEM Dialog Replacer",
  "description": "Extension to replace an AEM dialog from Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aem-dialog-replacer.replaceAEMDialog",
        "title": "Replace AEM Dialog"
      }
    ],
    "configuration": {
      "type":"object",
      "title":"AEM Dialog Replacer",
      "properties": {
        "aem-dialog-replacer.server": {
          "type": "string",
          "default": "http://localhost:4502",
          "description": "Server URL"
        },
        "aem-dialog-replacer.user": {
          "type": "string",
          "default": "admin",
          "description": "Username"
        },
        "aem-dialog-replacer.password": {
          "type": "string",
          "default": "admin",
          "description": "Password"
        }
      }
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
